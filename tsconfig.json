{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "lib": ["dom", "esnext"],
    "types": ["@types/*", "pixi.js"],
    "outDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
